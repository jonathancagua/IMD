{
    "files.exclude": {
        "**/*.ko.cmd": true,
        "**/*.mod.o.cmd": true,
        "**/*.o.cmd": true,
        "**/*.ko": true,
        "**/*.mod.c": true,
        "**/*.mod.o": true,
        "**/*.o": true,
        "**/*.symvers": true,
        "**/*.order": true,
        "**/*.cache.mk": true,
        "**/.tmp_versions": true,
    },
    "clang-format.executable": "${env.PROGRAMFILES}/LLVM/bin/clang-format.exe",
    "clang-format.language.c.enable": true,
    "clang-format.assumeFilename": ".clang-format" // file at the root folder
}